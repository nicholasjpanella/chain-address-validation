{
  "$schema": "https://raw.githubusercontent.com/lerna/lerna/main/packages/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true
    },
    "publish": {
      "allowBranch": "main",
      "npmClient": "npm",
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]",
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.story.tsx",
        "**/*.md",
        "**/*.sh"
      ]
    }
  }
}
